{
  "emulators": {
    "auth": {
      "port": 6400,
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": 6300,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true,
      "port": 6100,
      "host": "0.0.0.0"
    },
    "hosting": {
      "port": 6200,
      "host": "0.0.0.0"
    }
  },
  "hosting": [
    {
      "public": "firebase",
      "target": "demo-7-dev",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api{,/**}",
          "run": {
            "serviceId": "api-demo-7-srv-dev",
            "region": "asia-northeast3"
          }
        },
        {
          "source": "**",
          "run": {
            "serviceId": "client-demo-7-dev",
            "region": "asia-northeast3"
          }
        }
      ]
    },
    {
      "public": "firebase",
      "target": "demo-7-master",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api{,/**}",
          "run": {
            "serviceId": "api-demo-7-srv-master",
            "region": "asia-northeast3"
          }
        },
        {
          "source": "**",
          "run": {
            "serviceId": "client-demo-7-master",
            "region": "asia-northeast3"
          }
        }
      ]
    }
  ]
}
